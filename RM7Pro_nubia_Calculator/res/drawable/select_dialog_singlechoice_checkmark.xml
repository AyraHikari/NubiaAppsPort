<?xml version="1.0" encoding="utf-8"?>
<animated-selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:state_checked="true">
        <bitmap android:src="@drawable/btn_radio_to_on_mtrl_007" android:tint="@color/mfv_common_rb_on" />
    </item>
    <item android:state_enabled="false" android:state_checked="false">
        <bitmap android:src="@drawable/btn_radio_to_on_mtrl_000" android:tint="@color/mfv_common_rb_off" />
    </item>
    <item android:state_enabled="true" android:state_checked="true" android:id="@id/on">
        <bitmap android:src="@drawable/btn_radio_to_on_mtrl_007" android:tint="@color/mfv_common_rb_on" />
    </item>
    <item android:state_enabled="true" android:state_checked="false" android:id="@id/off">
        <bitmap android:src="@drawable/btn_radio_to_on_mtrl_000" android:tint="@color/mfv_common_rb_off" />
    </item>
    <transition android:toId="@id/off" android:fromId="@id/on">
        <animation-list>
            <item android:duration="15">
                <bitmap android:src="@drawable/btn_radio_to_on_mtrl_007" android:tint="@color/mfv_common_rb_on" />
            </item>
            <item android:duration="15">
                <bitmap android:src="@drawable/btn_radio_to_on_mtrl_006" android:tint="@color/mfv_common_rb_on" />
            </item>
            <item android:duration="15">
                <bitmap android:src="@drawable/btn_radio_to_on_mtrl_005" android:tint="@color/mfv_common_rb_on" />
            </item>
            <item android:duration="15">
                <bitmap android:src="@drawable/btn_radio_to_on_mtrl_004" android:tint="@color/mfv_common_rb_on" />
            </item>
            <item android:duration="15">
                <bitmap android:src="@drawable/btn_radio_to_on_mtrl_003" android:tint="@color/mfv_common_rb_off" />
            </item>
            <item android:duration="15">
                <bitmap android:src="@drawable/btn_radio_to_on_mtrl_002" android:tint="@color/mfv_common_rb_off" />
            </item>
            <item android:duration="15">
                <bitmap android:src="@drawable/btn_radio_to_on_mtrl_001" android:tint="@color/mfv_common_rb_off" />
            </item>
            <item android:duration="15">
                <bitmap android:src="@drawable/btn_radio_to_on_mtrl_000" android:tint="@color/mfv_common_rb_off" />
            </item>
        </animation-list>
    </transition>
    <transition android:toId="@id/on" android:fromId="@id/off">
        <animation-list>
            <item android:duration="15">
                <bitmap android:src="@drawable/btn_radio_to_on_mtrl_000" android:tint="@color/mfv_common_rb_off" />
            </item>
            <item android:duration="15">
                <bitmap android:src="@drawable/btn_radio_to_on_mtrl_001" android:tint="@color/mfv_common_rb_off" />
            </item>
            <item android:duration="15">
                <bitmap android:src="@drawable/btn_radio_to_on_mtrl_002" android:tint="@color/mfv_common_rb_off" />
            </item>
            <item android:duration="15">
                <bitmap android:src="@drawable/btn_radio_to_on_mtrl_003" android:tint="@color/mfv_common_rb_off" />
            </item>
            <item android:duration="15">
                <bitmap android:src="@drawable/btn_radio_to_on_mtrl_004" android:tint="@color/mfv_common_rb_on" />
            </item>
            <item android:duration="15">
                <bitmap android:src="@drawable/btn_radio_to_on_mtrl_005" android:tint="@color/mfv_common_rb_on" />
            </item>
            <item android:duration="15">
                <bitmap android:src="@drawable/btn_radio_to_on_mtrl_006" android:tint="@color/mfv_common_rb_on" />
            </item>
            <item android:duration="15">
                <bitmap android:src="@drawable/btn_radio_to_on_mtrl_007" android:tint="@color/mfv_common_rb_on" />
            </item>
        </animation-list>
    </transition>
</animated-selector>