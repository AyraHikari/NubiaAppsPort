<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="fill_horizontal|center" android:id="@android:id/background">
        <shape android:tint="@color/mfv_common_pb_bg_11" android:shape="rectangle">
            <corners android:radius="@dimen/progress_bar_corner_material_mff" />
            <size android:height="@dimen/mfvc_progress_bar_normal_height" />
            <solid android:color="@color/white_disabled_material_mff" />
        </shape>
    </item>
    <item android:gravity="fill_horizontal|center" android:id="@android:id/secondaryProgress">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/progress_bar_corner_material_mff" />
                <size android:height="@dimen/mfvc_progress_bar_normal_height" />
                <gradient android:startColor="@color/mfv_common_pb_11_left" android:endColor="@color/mfv_common_pb_11_right" android:angle="0.0" />
            </shape>
        </scale>
    </item>
    <item android:gravity="fill_horizontal|center" android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/progress_bar_corner_material_mff" />
                <size android:height="@dimen/mfvc_progress_bar_normal_height" />
                <gradient android:startColor="@color/mfv_common_pb_11_left" android:endColor="@color/mfv_common_pb_11_right" android:angle="0.0" />
            </shape>
        </scale>
    </item>
</layer-list>