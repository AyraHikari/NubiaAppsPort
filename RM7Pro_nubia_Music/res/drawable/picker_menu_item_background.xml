<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/picker_ripple_material_light"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_enabled="false">
                <nine-patch android:src="@drawable/picker_menu_item_background_normal" android:tint="@color/picker_nubia_disabled_light" />
            </item>
            <item android:state_pressed="true">
                <nine-patch android:src="@drawable/picker_menu_item_background_pressed" android:tint="@color/picker_nubia_white" />
            </item>
            <item>
                <nine-patch android:src="@drawable/picker_menu_item_background_normal" android:tint="@color/picker_nubia_normal_secondary_light" />
            </item>
        </selector>
    </item>
</ripple>