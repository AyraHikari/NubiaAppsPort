<?xml version="1.0" encoding="utf-8"?>
<animated-selector android:constantSize="true"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:id="@id/off">
        <bitmap android:gravity="center" android:src="@drawable/nubia_switch_thumb_mtrl_off_disable" />
    </item>
    <item android:state_enabled="false" android:id="@id/on">
        <bitmap android:gravity="center" android:src="@drawable/nubia_switch_thumb_mtrl_on_disable" />
    </item>
    <item android:state_checked="true" android:id="@id/on">
        <bitmap android:gravity="center" android:src="@drawable/nubia_switch_thumb_mtrl_on" />
    </item>
    <item android:state_checked="false" android:id="@id/off">
        <bitmap android:gravity="center" android:src="@drawable/nubia_switch_thumb_mtrl_off" />
    </item>
</animated-selector>