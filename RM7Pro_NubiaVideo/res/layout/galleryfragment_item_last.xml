<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_width="@dimen/gallery_item_image_width" android:layout_height="fill_parent">
        <cn.nubia.video.list.ui.ThumbnailImageView android:id="@id/itemImageView" android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@drawable/thumbnail" android:scaleType="fitXY" />
        <RelativeLayout android:background="@color/sixty_black" android:layout_width="fill_parent" android:layout_height="@dimen/gallery_item_text_height" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true">
            <ImageButton android:id="@id/itemPlayImageButton" android:background="@drawable/button_background" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/gallery_play_button_right_padding" android:src="@drawable/latest_play" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
            <LinearLayout android:gravity="start|center" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_toLeftOf="@id/itemPlayImageButton" android:layout_alignParentLeft="true">
                <TextView android:textSize="@dimen/text_size_14sp" android:textColor="@color/ninety_white" android:ellipsize="end" android:id="@id/itemTitleTextView" android:paddingBottom="@dimen/text_with_text_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:paddingStart="@dimen/normal_padding" />
                <TextView android:textSize="@dimen/text_size_12sp" android:textColor="@color/fifty_four_white" android:id="@id/itemTimeTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingStart="@dimen/normal_padding" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>