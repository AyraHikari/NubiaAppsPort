<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.AppCompat" parent="@style/Base.V28.Theme.AppCompat" />
    <style name="Base.Theme.AppCompat.Light" parent="@style/Base.V28.Theme.AppCompat.Light" />
    <style name="Theme.FullEditorPlayer" parent="@android:style/Theme.Holo.Light">
        <item name="android:textAppearanceMedium">@style/TextAppearance.Nubia.Medium</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:progressBarStyle">@style/Widget.Nubia.ProgressBar</item>
        <item name="android:windowAnimationStyle">@style/Animation.Nubia.Activity</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@color/statu_bar_bg</item>
    </style>
    <style name="Theme.FullScreenPlayer" parent="@android:style/Theme.Holo.Light">
        <item name="android:textColorPrimary">@color/nubia_primary_text_default_material_light</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.Nubia.Medium</item>
        <item name="android:buttonStyle">@style/Widget.Nubia.Button</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:progressBarStyleHorizontal">@style/Widget.Nubia.ProgressBar.Horizontal</item>
        <item name="android:radioButtonStyle">@style/Widget.Nubia.CompoundButton.RadioButton</item>
        <item name="android:windowAnimationStyle">@style/Animation.Nubia.Activity</item>
        <item name="android:checkMark">@drawable/nubia_abc_btn_radio_material_dark</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@color/statu_bar_bg</item>
        <item name="throughDivider">@drawable/nubia_list_divider_through</item>
    </style>
    <style name="Base.V28.Theme.AppCompat" parent="@style/Base.V26.Theme.AppCompat">
        <item name="dialogCornerRadius">@null</item>
    </style>
    <style name="Base.V28.Theme.AppCompat.Light" parent="@style/Base.V26.Theme.AppCompat.Light">
        <item name="dialogCornerRadius">@null</item>
    </style>
</resources>
